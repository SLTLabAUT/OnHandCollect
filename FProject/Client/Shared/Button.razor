@inherits ButtonParameters

<div>
    <div class="overlay">
        @if (State == ButtonState.Acting)
        {
            <Spinner Size=@SpinnerSize.Small />
        }
        else if (State == ButtonState.Done)
        {
            <Icon @ref="doneRef" ClassName="done ms-motion-scaleDownOut" IconName="Accept" />
        }
    </div>
    <div class="button">
        @if (ButtonType == ButtonType.Default)
        {
            <MyBFUDefaultButton Text=@Text IconName=@IconName Style=@ButtonStyle Disabled=@DisabledCondition OnClick=@ClickHandler>
                @ChildContent
            </MyBFUDefaultButton>
        }
        else if (ButtonType == ButtonType.Primary)
        {
            <MyBFUPrimaryButton Text=@Text IconName=@IconName Style=@ButtonStyle Disabled=@DisabledCondition OnClick=@ClickHandler>
                @ChildContent
            </MyBFUPrimaryButton>
        }
        else if (ButtonType == ButtonType.Submit)
        {
            <MyBFUSubmitButton Text=@Text
                               Style=@ButtonStyle
                               UnknownProperties=@UnknownProperties
                               Disabled=@DisabledCondition
                               OnClick=@ClickHandler>
                @ChildContent
            </MyBFUSubmitButton>
        }
        else if (ButtonType == ButtonType.Icon)
        {
            <MyBFUIconButton IconName=@IconName
                             Style=@ButtonStyle
                             Disabled=@DisabledCondition
                             OnClick=@ClickHandler />
        }
    </div>
</div>
