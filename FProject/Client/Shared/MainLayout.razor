@inherits LayoutComponentBase

<BFUStack Horizontal="true" Style="width:100%;">
    <BFUStackItem ClassName="ms-hiddenMdDown" Grow=1 Style="overflow:hidden;max-width:20%;min-width:20%;">
        <NavMenu />
    </BFUStackItem>

    <BFUPanel ClassName="ms-hiddenMdUp" Type=@PanelType.SmallFixedFar HasCloseButton=false OnDismiss=@HideMenu IsOpen=@isPanelOpen IsLightDismiss="true">
        <NavigationTemplate>
            <BFUIconButton OnClick=HideMenu IconName="GlobalNavButtonActive" />
        </NavigationTemplate>
        <ChildContent>
            <NavMenu OnLinkClicked=@OnNavLinkClick Style="box-shadow:none;" />
        </ChildContent>
    </BFUPanel>

    <BFUStackItem Grow=7 Style="overflow:hidden">
        <BFUStack VerticalFill="true" Style="width:100%;">
            <BFUResponsiveLayout MaxWidth="ResponsiveMode.Medium.ToMaxCssValue()">
                <BFUStackItem VerticalFill="false">
                    <BFUIconButton IconName="GlobalNavButton" OnClick=@ShowMenu />
                </BFUStackItem>
            </BFUResponsiveLayout>

            <BFUStackItem ClassName="main" Grow="1" Tokens="new BFUStackItemTokens { Padding = ((int)CurrentMode <= (int)ResponsiveMode.Medium ? 10 : 0) }" Style="overflow-y:auto;">
                @Body
            </BFUStackItem>
        </BFUStack>
    </BFUStackItem>
</BFUStack>
