{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "module": "ESNext",
    //"outDir": "wwwroot/ts",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "/*": [ "wwwroot/*" ]
    },
    "typeRoots": [ "node_modules/@types", "@types" ],
    "allowUmdGlobalAccess":  true
  },
  "include": [
    "Pages",
    "Shared",
    "wwwroot/ts"
  ]
}
